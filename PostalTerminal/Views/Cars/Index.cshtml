@model IEnumerable<PostalTerminal.Models.Car>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Number plate
        </th>
        <th>
            Insurance
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TA)
        </th>
        <th>
            Is working
        </th>
        <th>
            Garage
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numberPlate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.insurance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isWorking)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.garage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
